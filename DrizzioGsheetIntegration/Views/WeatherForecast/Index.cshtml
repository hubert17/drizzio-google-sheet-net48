
@{
    ViewBag.Title = "Weather forecast";
}

<h2>@ViewBag.Title</h2>

<table v-cloak class="table" @@vue:mounted="getForecast">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp. (C)</th>
            <th>Temp. (F)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        <tr v-for="forecast in forecasts">
            <td>{{forecast.Date}}</td>
            <td>{{forecast.TemperatureC}}</td>
            <td>{{forecast.TemperatureF}}</td>
            <td>{{forecast.Summary}}</td>
        </tr>
    </tbody>
</table>

<div class="form-group row">
    <label for="select" class="col-2 col-form-label"><strong>Page Size</strong></label>
    <div class="col-2">
        <select v-model="pageSize" class="custom-select" @@change="getForecast">
            <option>5</option>
            <option>10</option>
            <option>15</option>
        </select>
    </div>
</div>

<script type="module">
    // https://github.com/vuejs/petite-vue
    import { createApp } from "/Scripts/petite-vue.es.js"; 
    const app = {
        //data
        forecasts: [],
        pageSize: 5,
        //methods
        getForecast() {
            fetch('/WeatherForecast/Get?maxItem=' + this.pageSize)
                .then(response => response.json())
                .then((data) => {
                    this.forecasts = data;
                });
        }
    };
    createApp(app).mount();
</script>

